<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>User App</title>
  </head>
  <body>
    <div class="mx-20 my-10">
        <a href="/" class="text-blue-700">Back to Home</a>
    </div>
    <div class="w-10/12 mx-auto flex justify-center gap-5 flex-wrap mt-10">
      <% users.forEach((user, index)=>{ %>
      <div class="bg-zinc-800 w-72 rounded-lg p-4">
        <img src="<%=user.image%>" class="w-[99%] cover rounded-md h-64 mx-auto h-20 mb-4 bg-zinc-700" ></img>
        <h3 class="text-xl bg-zinc-800"><%=user.name%></h3>
        <p class="text-md bg-zinc-800"><%=user.email%></p>
        <div class="flex justify-start gap-3 bg-zinc-800 items-center">
          <a class="text-blue-700 bg-zinc-800" href="/edit/<%=user._id%>">Edit</a>
          <a class="text-red-700 bg-zinc-800" href="/delete/<%=user._id%>">Delete</a>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
